<p class="notice"></p>
<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <% end %>
      <td></td>
      <td></td>
      <td></td>
    </tr>
  </tbody>
</table>

<h2>New book</h2>

<%= form_with model: @book, url: "/books", method: :post do |f| %>

<label>Title</label>
<%= f.text_field :title %>

<label>Body</label>
<%= f.text_area :body %>

<%= f.submit "Create Book" %>

<% end %>
